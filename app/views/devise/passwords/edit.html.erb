<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'row') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="col-12 mb-3 ">
          <%= f.label :password, "New password", class: 'form-label'%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="col-12 mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="col-12 mb-3 ">
          <%= f.submit "Change my password", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
