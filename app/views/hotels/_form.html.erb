<div class="col-lg-6 mt-5 mx-lg-auto"></div>
  <div class="card shadow">
    <div class="card-header">
      <%= yield :add_hotel_heading %>
    </div>
    <div class="card-body">
      <%= form_with(model: hotel, class: 'row g-3') do |form| %>
        <% if hotel.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>
            <ul>
              <% hotel.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="col-md-6">
          <%= form.label :name, class:'form-label' %>
          <%= form.text_field :name, autofocus: true, class:'form-control' %>
        </div>
        <div class="col-md-6">
          <%= form.label :email,class:'form-label' %>
          <%= form.text_field :email, class:'form-control' %>
        </div>
        <div class="col-md-12">
          <%= form.label :location, class:'form-label' %>
          <%= form.text_field :location, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= form.label :telephone, class:'form-label' %>
          <%= form.text_field :telephone, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= form.label :city, class:'form-label' %>
          <%= form.text_field :city, class:'form-control' %>
        </div>
        <div class="col-md-6">
          <%= form.label :state, class:'form-label' %>  
          <%= form.select :state, [ "Andhra Pradesh",
                "Arunachal Pradesh",
                "Assam",
                "Bihar",
                "Chhattisgarh",
                "Goa",
                "Gujarat",
                "Haryana",
                "Himachal Pradesh",
                "Jammu and Kashmir",
                "Jharkhand",
                "Karnataka",
                "Kerala",
                "Madhya Pradesh",
                "Maharashtra",
                "Manipur",
                "Meghalaya",
                "Mizoram",
                "Nagaland",
                "Odisha",
                "Punjab",
                "Rajasthan",
                "Sikkim",
                "Tamil Nadu",
                "Telangana",
                "Tripura",
                "Uttarakhand",
                "Uttar Pradesh",
                "West Bengal",
                "Andaman and Nicobar Islands",
                "Chandigarh",
                "Dadra and Nagar Haveli",
                "Daman and Diu",
                "Delhi",
                "Lakshadweep",
                "Puducherry"],{}, class: 'form-select' %>
        </div>
        <div class="col-md-6">
          <%= form.label :zipcode, class:'form-label' %>
          <%= form.text_field :zipcode, class:'form-control' %>
        </div>
        <div class="col-md-12">
          <%= form.label :description, class:'form-label' %>
          <%= form.text_area :description, class:'form-control' %>
        </div>
        <div class="col-md-12">
          <%= form.label :hotel_pictures, class: 'form-label' %>
          <%= form.file_field :hotel_pictures, multiple: true, class: 'form-control' %>
        </div>
        <div class="col-md-12">
          <%= form.submit "Add Hotel", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>