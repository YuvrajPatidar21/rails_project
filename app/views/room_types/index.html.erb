<div class="card shadow mt-5  ">
  <div class="card-header text-center ">
    <h1><strong>All Room Type</strong></h1>
  </div>
  <div class='col m-3'>
    <%= link_to "Add new room type", new_hotel_room_type_path, class:'btn btn-primary' %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-4 ">
    <% @room_types.each do |room_type| %>
      <div class="col">
        <div class="card h-100 shadow " style="background-color: lightgray;">  
          <% if room_type.rooms_type_picture.attached? %>
            <%= image_tag room_type.rooms_type_picture, alt: 'rooms_type_picture', class: 'card-img-top', style: "width: auto; height: 300px;" %>
          <% else %>
              <%= image_tag "room_type/default_room_image", class: 'card-img', style: "width: auto; height: 300px;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><strong>Name: </strong><%= room_type.name %></h5>
            <p class="card-text">Description: <%= room_type.description[0, 75] %>...</p>
            <p class="card-text">Price: <%= room_type.price %></p>
            <p class="card-text">Capacity: <%= room_type.capacity %> members.</p>
            <%= link_to "More", hotel_room_type_path(@hotel, room_type),class:'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>