<% if flash[:notice] || flash[:alert] %>
  <div class="alert <%= flash[:alert] ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show mt-5" role="alert">
    <strong><%= flash[:notice] || flash[:alert] %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>